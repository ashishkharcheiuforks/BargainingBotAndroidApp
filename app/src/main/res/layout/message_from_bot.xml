<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp" app:srcCompat="@android:drawable/sym_def_app_icon"
            android:id="@+id/message_from_bot_image_view"
            android:elevation="8dp"
            app:layout_constraintEnd_toStartOf="@+id/guideline"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"/>
    <com.google.android.material.card.MaterialCardView android:layout_width="wrap_content"
                                                       android:layout_height="wrap_content"
                                                       android:minHeight="?listPreferredItemHeightSmall"
                                                       android:maxWidth="200dp"
                                                       app:layout_constraintWidth_max="200dp"
                                                       app:layout_constraintStart_toStartOf="parent"
                                                       app:layout_constraintTop_toTopOf="parent"
                                                       app:layout_constraintEnd_toEndOf="parent"
                                                       app:layout_constraintBottom_toBottomOf="parent"
                                                       app:cardCornerRadius="16dp"
                                                       android:backgroundTint="@color/secondaryColor"
                                                       android:padding="16dp"
                                                       android:layout_margin="16dp"
                                                       android:layoutDirection="ltr"
                                                       app:layout_constraintHorizontal_bias="0.1"
                                                       android:id="@+id/materialCardView"
                                                       android:layout_marginStart="8dp" android:layout_marginEnd="8dp">

        <TextView
                android:layout_marginStart="16dp"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:maxWidth="200dp"
                android:textColor="@color/primaryTextColor"
                android:id="@+id/message_from_bot_text_view"
                android:text="message from bot"
                android:layout_gravity="center"
                android:layout_width="wrap_content" android:layout_height="wrap_content"/>

    </com.google.android.material.card.MaterialCardView>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline"
                                                android:orientation="vertical"
                                                app:layout_constraintGuide_percent="0.13868614"/>


</androidx.constraintlayout.widget.ConstraintLayout>