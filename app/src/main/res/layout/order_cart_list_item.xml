<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:text="HELLO" android:textSize="20sp"
              android:maxWidth="150dp"
              android:id="@+id/order_name"
              app:layout_constraintStart_toStartOf="parent"
              android:layout_marginStart="16dp" android:layout_marginTop="8dp"
              app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
              app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
            android:id="@+id/order_quantity"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:textColor="@color/secondaryColor"
              android:text="12" android:textSize="20sp"
              app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
              app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
              android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
              app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:text="200" android:textSize="20sp"
              android:id="@+id/order_cost"
              android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintVertical_bias="0.0" android:layout_marginEnd="32dp"
              app:layout_constraintEnd_toEndOf="parent"/>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:textColor="@color/secondaryColor"
              android:text="@string/Rs" android:textSize="20sp"
              app:layout_constraintBaseline_toBaselineOf="@+id/order_cost"
              app:layout_constraintStart_toEndOf="@+id/order_cost" android:layout_marginStart="8dp"
              android:id="@+id/textView8"/>


</androidx.constraintlayout.widget.ConstraintLayout>